@model Rating.Models.Feedback

@{
    ViewData["Title"] = "Create";
    double AVG = ViewBag.AVG;
}

<div>
    <h1 class="headrs">
        USERS FEEDBACK
    </h1>
    <div class="heading-avg">
        AVERAGE RATING: @AVG
    </div>
        <span><img class="mb-4 noselect whatsapp-icon" src="~/whatsapp.ico" alt="logo" width="80" role="img" /></span>
    <div class="create-form">
        <h1>Create</h1>
        <h4>Feedback</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="username" class="control-label"></label>
                        <input asp-for="username" class="form-control" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="rate" class="control-label"></label>
                        <input asp-for="rate" class="form-control" />
                        <span asp-validation-for="rate" class="text-danger"></span>
                    </div>
                    <div class="class=" form-group">
                        <label asp-for="description" class="control-label"></label>
                        <input asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Create" style="margin-block: 5px;" class="btn btn-success" data-toggle="modal" data-target="#myModal" />
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a style="color: #67ab49;" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}