@model Rating.Models.Feedback

@{
    ViewData["Title"] = "Edit";
    double AVG = ViewBag.AVG;
}
<div>
    <h1 class="headrs">
        USERS FEEDBACK
    </h1>
    <div class="heading-avg">
        AVERAGE RATING: @AVG
    </div>
    <div>
        <img class="mb-4 noselect whatsapp-icon" src="~/whatsapp.ico" alt="logo" width="80" role="img" />
    </div>
</div>
<h1>Edit</h1>
<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="username" />
            <div class="form-group">
                <label asp-for="rate" class="control-label"></label>
                <input asp-for="rate" class="form-control" />
                <span asp-validation-for="rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color: #67ab49;" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
